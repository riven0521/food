.top-group {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f4f4f4;
}

.search-group {
  width: 100%;
  height: 70rpx;
  background-color: white;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-radius : 10rpx ;
}

.search-group .search-icon {
  flex-basis: 20px;
}

.search-group .clear-icon {
  flex-basis: 20px;
}
.search-group .search-input {
  flex: 1;
  padding: 0 10rpx;
  box-sizing: border-box;
}


/*布局样式*/
.icon {
  padding-top: 10px;
  padding-left: 10px;
  width: 45px;
  height: 45px;
}

.category-border {
  margin: 10px;
  background-color: #f4f4f4;
  border-radius: 15px;
}

.category {
  justify-content: space-between;
  /*均衡排列每个元素*/
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  /*换行*/
}

.category-works {
  width: 140rpx;
}

.label {
  text-align: center;
  padding-bottom: 10px;
}

/*轮播图样式*/
.auto {
  width: 720rpx;
  height: 100%;
  border-radius: 15px;
}

