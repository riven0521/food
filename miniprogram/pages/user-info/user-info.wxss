.pay {
  display: block;
  width: 300rpx;
  height: 90rpx;
  border-radius: 12rpx;
  background: #62b900;
  color: #fff;
  text-align: center;
  line-height: 90rpx;
  margin: 50rpx auto;
  font-size: 32rpx;
}

.keyboard {
  height: 0;
  width: 100%;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  transition: height 0.3s;
}

.hind_box {
  height: 410rpx;
}

.complete {
  background: #efefef;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: right;
  padding: 0 25rpx;
  color: #0f0;
}

.key_box {
  overflow: hidden;
}

.keys {
  float: left;
  width: 250rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  border-left: 1px solid #eee;
  box-sizing: border-box;
  border-top: 1px solid #eee;
}

.border0 {
  border-left: 0;
}

.bg_color {
  background: #ccc;
}

.btn-box .bt-date {
  font-size: 36rpx;
  color: #424242;
  font-weight: bold;
  text-align: center;
}

.btn-box .bt-date image {
  width: 30rpx;
  height: 16rpx;
  margin-left: 10rpx;
}

.btn-box ::after {
  clear: both;
}